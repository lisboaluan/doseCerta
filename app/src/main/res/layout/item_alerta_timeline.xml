<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Bolinha de status (vermelho, verde, ou cinza) -->
        <ImageView
            android:id="@+id/statusButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_status_silver" />  <!-- Default Ã© cinza -->

        <!-- Linha vertical para indicar a timeline -->
        <View
            android:id="@+id/verticalLine"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@color/colorPrimary" />

        <!-- Detalhes do medicamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nome do medicamento -->
            <TextView
                android:id="@+id/medicationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Medicamento"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <!-- Hora do medicamento -->
            <TextView
                android:id="@+id/timeAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textSize="14sp"
                android:textColor="@color/blue" />

            <!-- Dosagem do medicamento -->
            <TextView
                android:id="@+id/dosageAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 mg"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
